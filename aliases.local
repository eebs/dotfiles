# Git shortcuts
alias git="hub"
alias gs="git status --short --branch"
alias gdr="git diff-tree --diff-filter=d -r --no-commit-id --name-only origin/master head | xargs"

# Laptop
alias macup="sh ~/code/thoughtbot/laptop/mac 2>&1 | tee ~/laptop.log"

# Editor
alias subl="vim"

# GPG
alias gpg="gpg2"

# Sublime
alias s="subl"

alias trust="mkdir -p .git/safe"

alias fucknode="rm -rf node_modules && npm install && echo `date` >> ~/fucknode.txt"
