" Ack - Integrates ack (grep replacement) into vim

Plug 'mileszs/ack.vim'

nmap <LEADER>ck :Ack!<space>

function! s:VisualAck()
  let temp = @"
  normal! gvy
  let escaped_pattern = escape(@", "[]().*")
  let @" = temp
  execute "Ack! '" . escaped_pattern . "'"
endfunction

nnoremap K :Ack! '<C-r><C-w>'<cr>
vnoremap K :<C-u>call <sid>VisualAck()<cr>

if executable('rg')
  let g:ackprg = 'rg --vimgrep --hidden'
endif

" vim:ft=vim
