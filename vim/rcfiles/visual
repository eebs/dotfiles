" Visual Settings

" Automatically rebalance windows on vim resize
autocmd VimResized * :wincmd =

" Open new split panes to right and bottom, which feels more natural
set splitbelow
set splitright

" Color scheme
colorscheme onedark

" 24 bit color
set termguicolors
let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"

" vim:ft=vim
